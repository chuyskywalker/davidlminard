            </div>
        </div>
    </footer>


    <!-- Portfolio Modals -->
    <!-- Use the modals below to showcase details about your portfolio projects! -->

{% for project in projects %}
            <div class="portfolio-modal modal fade" id="modal-{{ project.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="close-modal" data-dismiss="modal">
                            <div class="lr">
                                <div class="rl">
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 col-lg-offset-2">
                                    <div class="modal-body">
                                        <h2>{{ project.title }}</h2>
                                        <p><i>{{ project.short }}</i></p>
                                        <div class="embed" data-embed="{{ project.embed }}"></div>
                                        <p>{{ project.desc | safe }}</p>
                                        <button type="button" class="btn btn-primary btn-close" data-dismiss="modal"><i class="icon icon-cancel"></i> Close Project</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
{% endfor %}

    <script src="/dist.js"></script>

